<% provide(:title, 'Reset Password') %>
<h1>Reset Password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
		<%= bootstrap_form_tag url: password_resets_path, :method => :post do |f| %>
		  <%= f.email_field :email %>
		  <%= f.submit "Reset Password", class: "btn btn-lg btn-primary" %>
		<% end %>
	</div>
</div>
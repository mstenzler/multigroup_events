<% provide(:title, 'Verify Email Address') %>
<h1>Verify Email Address</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= bootstrap_form_for(@verify_email_form, url: user_verify_emails_path(@user), 
        method: :post) do |f| %>
      <%= render 'shared/error_messages', target: @verify_email_form  %>
      <%= f.text_field :verify_token %>
      <%= f.submit "Verify", class: "btn btn-lg btn-primary" %>
    <% end %>
  </div>
</div>